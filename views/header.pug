//- Use dot to reference classes of css in elements ie: header.header where header after dot is the css class

header.header
    nav.nav.nav--tours
        a.nav__el(href='/') All tours
    //- Don't even have to specify div name when writing div in pug. ie: for div.header simply write .header    
    .header__logo 
        img(src='/img/logo-white.png' alt='Natours logo')
    nav.nav.nav--user 
        //- The user var comes from authMiddleware (logged in or not)
        if user
            a.nav__el.nav__el--logout Log out
            a.nav__el(href='/me') 
                img.nav__user-img(src=`/img/users/${user.photo}` alt='User photo')
                span #{user.name.split(' ')[0]}
        else
            a.nav__el(href='/login') Log in
            a.nav__el.nav__el--cta Sign up
